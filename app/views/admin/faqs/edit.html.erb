<h1>Edit FAQ</h1>

<%= form_for [:admin, @faq] do |f| %>
  <% if @faq.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @faq.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :faq %><br />
    <%= f.text_field :faq %>
  </div>
  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>
  </div>
  <div class="actions"><%= f.submit "Update" %></div>
<% end %>